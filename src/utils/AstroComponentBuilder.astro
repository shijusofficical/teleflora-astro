---
import DynamicRenderer from '@utils/ReactComponentRenderer';
const { data } = Astro.props;
const { body, additionalData, productsWithDetails} : {body:any, additionalData:any, productsWithDetails:any} = data;
---
{body?.data?.[0]?.content?.map((item: any) => {
  switch (item.directive) {
    case 'load':
      return <DynamicRenderer components={[item]} additionalData={additionalData} productsWithDetails={productsWithDetails} client:load />;
    case 'idle':
      return <DynamicRenderer components={[item]} additionalData={additionalData} productsWithDetails={productsWithDetails} client:idle />;
    case 'visible':
      return <DynamicRenderer components={[item]} additionalData={additionalData} productsWithDetails={productsWithDetails} client:visible />;
    default:
      return <DynamicRenderer components={[item]} additionalData={additionalData} productsWithDetails={productsWithDetails} client:visible />;
  }
})}
